<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textdescripcionHerramienta"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewCodigo"
        app:layout_constraintTop_toBottomOf="@+id/textViewCodigo" />

    <TextView
        android:id="@+id/textCodigoHerramienta"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textViewCodigo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCantidadHerramienta"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCodigo"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:text="@string/TextCodigo"
        android:textColor="#039BE5"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="@string/Cantida"
        android:textColor="#039BE5"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textCodigoHerramienta"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
